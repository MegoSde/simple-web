@{
    ViewData["Title"] = "Upload media";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>Upload media</h1>
    <a href="/media">‚Üê Tilbage til liste</a>

@if (TempData["error"] is string error)
{
    <div class="flash err">@error</div>
}

<form action="/media/new" method="post" enctype="multipart/form-data">
    <input type="hidden" name="expect_html" value="1" />
    <fieldset>
        <label for="file">Fil</label>
        <input id="file" name="file" type="file" accept="image/*" required />
    </fieldset>
    <fieldset>
        <label for="alt">Alt-tekst (valgfri)</label>
        <input id="alt" name="alt_text" type="text" placeholder="Beskriv billedet kort" />
    </fieldset>
    <fieldset>
        <label for="meta">Meta (JSON, valgfri)</label>
        <textarea id="meta" name="meta" rows="4" placeholder='{"source":"marketing"}'></textarea>
    </fieldset>
    <button type="submit">Upload</button>
</form>