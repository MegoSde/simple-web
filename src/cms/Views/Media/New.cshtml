@{
    ViewData["Title"] = "Upload media";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="backlink" href="@Url.Action("List","Media")">
    <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
        <use href="/icons.v1.svg#i-back"></use>
    </svg>
    Tilbage
</a>
    <h1>Upload media</h1>

@if (TempData["error"] is string error)
{
    <div class="flash err">@error</div>
}

<form action="@Url.Action("New","Media")" method="post" enctype="multipart/form-data">
    <input type="hidden" name="expectHtml" value="1" />
    <fieldset>
        <label for="file">Fil</label>
        <input id="file" name="file" type="file" accept="image/*" required />
    </fieldset>
    <fieldset>
        <label for="alt">Alt-tekst (valgfri)</label>
        <input id="alt" name="altText" type="text" placeholder="Beskriv billedet kort" />
    </fieldset>
    <fieldset>
        <label for="meta">Meta (JSON, valgfri)</label>
        <textarea id="meta" name="meta" rows="4" placeholder='{"source":"marketing"}'></textarea>
    </fieldset>
    <button type="submit">Upload</button>
</form>